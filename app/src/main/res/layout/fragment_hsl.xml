<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/BackgroundCardColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/constraintLayoutRatio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayoutRatioCont"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewRatio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutRatioCont"
        android:background="@drawable/background_bottom"
        android:paddingTop="10dp"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="10dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <RadioGroup
                android:id="@+id/colorselection"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_unslelected"
                android:checkedButton="@+id/red"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                app:layout_constraintBottom_toTopOf="@+id/hsl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <RadioButton
                    android:id="@+id/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@android:color/holo_red_dark" />

                <RadioButton
                    android:id="@+id/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#00ff00" />

                <RadioButton
                    android:id="@+id/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#0000ff" />

                <RadioButton
                    android:id="@+id/mergenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#ff0080" />

                <RadioButton
                    android:id="@+id/yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#fcc010" />

                <RadioButton
                    android:id="@+id/cyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#4afcfe" />

                <RadioButton
                    android:id="@+id/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#ffffff" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/hsl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:text="H"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <com.warkiz.widget.IndicatorSeekBar
                        android:id="@+id/hue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:isb_indicator_color="@color/mainColor"
                        app:isb_indicator_text_color="@color/white"
                        app:isb_max="100"
                        app:isb_min="-100"
                        app:isb_progress="0"
                        app:isb_progress_value_float="true"
                        app:isb_seek_smoothly="true"
                        app:isb_show_indicator="rounded_rectangle"
                        app:isb_show_tick_marks_type="oval"
                        app:isb_show_tick_texts="true"
                        app:isb_thumb_color="@color/mainColor"
                        app:isb_thumb_size="15dp"
                        app:isb_thumb_text_color="@color/white"
                        app:isb_tick_marks_size="13dp"
                        app:isb_tick_texts_color="@color/white"
                        app:isb_tick_texts_size="15sp"
                        app:isb_track_background_color="#DFDFDF"
                        app:isb_track_background_size="2dp"
                        app:isb_track_progress_color="@color/mainColor"
                        app:isb_track_progress_size="3dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <com.warkiz.widget.IndicatorSeekBar
                        android:id="@+id/sat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:isb_indicator_color="@color/mainColor"
                        app:isb_indicator_text_color="@color/white"
                        app:isb_max="100"
                        app:isb_min="-100"
                        app:isb_progress="0"
                        app:isb_progress_value_float="true"
                        app:isb_seek_smoothly="true"
                        app:isb_show_indicator="rounded_rectangle"
                        app:isb_show_tick_marks_type="oval"
                        app:isb_show_tick_texts="true"
                        app:isb_thumb_color="@color/mainColor"
                        app:isb_thumb_size="15dp"
                        app:isb_thumb_text_color="@color/white"
                        app:isb_tick_marks_size="13dp"
                        app:isb_tick_texts_color="@color/white"
                        app:isb_tick_texts_size="15sp"
                        app:isb_track_background_color="#DFDFDF"
                        app:isb_track_background_size="2dp"
                        app:isb_track_progress_color="@color/mainColor"
                        app:isb_track_progress_size="3dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:text="L"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <com.warkiz.widget.IndicatorSeekBar
                        android:id="@+id/light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:isb_indicator_color="@color/mainColor"
                        app:isb_indicator_text_color="@color/white"
                        app:isb_max="100"
                        app:isb_min="-100"
                        app:isb_progress="0"
                        app:isb_progress_value_float="true"
                        app:isb_seek_smoothly="true"
                        app:isb_show_indicator="rounded_rectangle"
                        app:isb_show_tick_marks_type="oval"
                        app:isb_show_tick_texts="true"
                        app:isb_thumb_color="@color/mainColor"
                        app:isb_thumb_size="15dp"
                        app:isb_thumb_text_color="@color/white"
                        app:isb_tick_marks_size="13dp"
                        app:isb_tick_texts_color="@color/white"
                        app:isb_tick_texts_size="15sp"
                        app:isb_track_background_color="#DFDFDF"
                        app:isb_track_background_size="2dp"
                        app:isb_track_progress_color="@color/mainColor"
                        app:isb_track_progress_size="3dp" />

                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/BackgroundColor"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/imageViewCloseRatio"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_round_close"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HSL"
                    android:textSize="12sp"
                    android:fontFamily="@font/font"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/imageViewSaveRatio"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_round_check"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>