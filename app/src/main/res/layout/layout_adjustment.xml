<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_view_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BackgroundColor"
    android:orientation="horizontal"
    android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_img_brightness"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_brightness"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_brightness"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="brightness"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font"
                android:textColor="@color/white"
                android:textSize="9sp"/>

            <View
                android:id="@+id/indicator_brightness"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_selected"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_img_contrast"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_contrast"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_contrast"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="contrast"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font"
                android:textColor="@color/white"
                android:textSize="9sp"/>

            <View
                android:id="@+id/indicator_contrast"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_selected"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_img_saturation"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_saturation"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_saturation"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="saturation"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font"
                android:textColor="@color/white"
                android:textSize="9sp" />

            <View
                android:id="@+id/indicator_saturation"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_selected"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_img_exposure"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_exposure"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_exposure"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="exposure"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font"
                android:textColor="@color/white"
                android:textSize="9sp" />

            <View
                android:id="@+id/indicator_exposure"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_selected"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_img_hue"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_hue"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_hue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="hue"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font"
                android:textColor="@color/white"
                android:textSize="9sp"/>

            <View
                android:id="@+id/indicator_hue"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_selected"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_img_temp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_temp"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_brightness" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="temperature"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font"
                android:textColor="@color/white"
                android:textSize="9sp"/>

            <View
                android:id="@+id/indicator_temp"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_selected"
                android:visibility="invisible"/>
        </LinearLayout>


</LinearLayout>